//Проверка пользовательского ввода на различные ограничения является частой задачей. Попросите пользователя ввести три числа и проверьте, что хотя бы одно является положительным. Результат проверки необходимо сообщить пользователю.

package main

import (
	"fmt"
)

func main() {
  
	fmt.Println("Введите 3 числа:")
  var a, b, c int
  fmt.Scan(&a)
  fmt.Scan(&b)
  fmt.Scan(&c)

  if a > 0 || b > 0 || c > 0 {
    fmt.Println("Одно (или несколько) из чисел является положительным.")
  } else {
    fmt.Println("Ни одно из чисел не является положительным.")
  }
}
