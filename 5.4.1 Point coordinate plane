//Напишите программу, которая поможет пользователю определить, к какой координатной четверти принадлежит точка. Пользователь вводит числа X и Y, а программе необходимо вывести, какой координатной четверти принадлежит точка.

package main

import (
	"fmt"
)

func main() {

	fmt.Print("Введите координаты X и Y: ")
	var x, y float64
	fmt.Scan(&x)
	fmt.Scan(&y)

	if x > 0 && y > 0 {
		fmt.Println("Точка принадлежит первой координатной четверти.")
	} else if x < 0 && y > 0 {
		fmt.Println("Точка принадлежит второй координатной четверти.")
	} else if x < 0 && y < 0 {
		fmt.Println("Точка принадлежит третьей координатной четверти.")
	} else {
		fmt.Println("Точка принадлежит четвертой координатной четверти.")
	}
}
